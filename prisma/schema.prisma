generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Request {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  title           String?
  label           String?
  requestUrl      String
  requestMethod   String   @default("GET")
  queryParams     String?
  headerParams    String?
  jsonParams      String?
  responseStatus  String?
  responseTime    Int?
  responseSize    Float?
  responseHeaders String?
  responseBody    String?
  workspaceId     String
  hasExamples     Boolean  @default(false)

  exampleOf   Request?  @relation("ExampleOf", fields: [exampleOfId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  exampleOfId String?
  examples    Request[] @relation("ExampleOf")

  workspace Workspace @relation(fields: [workspaceId], references: [id])

  @@index([workspaceId], map: "workspaceId")
  @@index([exampleOfId], map: "exampleOfId")
}

model Workspace {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String
  description String?
  type        String    @default("PERSONAL")
  userId      String
  requests    Request[]

  @@index([userId], map: "userId")
  @@map("workspaces")
}
